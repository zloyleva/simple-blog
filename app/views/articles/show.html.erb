<h2><%= @article.title %></h2>
<p><%= @article.text %></p>

<hr/>
<%  @article.comments.each do |item| %>
<p><b>Author: <%= item.author %></b><br/>
Comment: <i><%= item.body %></i></p>
<hr/>
<%end%>

<h3>Comments</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br/>
		<%= f.text_field :author %>
	</p>
	<p>	
		<%= f.label :body %><br/>
		<%= f.text_area :body %>
	</p>
	<p><%= f.submit %></p>
<% end %>